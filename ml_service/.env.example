# ML Service Environment Example
# Copy to .env and adjust as needed

# Model selection
QWEN_MODEL_NAME=Qwen/Qwen2-1.5B-Instruct
# Optional: path to a PEFT LoRA adapter directory
PEFT_ADAPTER_PATH=

# Optional: per-mode adapters (if you fine-tune separate adapters)
PEFT_ADAPTER_PATH_THERAPEUTIC=
PEFT_ADAPTER_PATH_EMOTIONAL=
PEFT_ADAPTER_PATH_INFORMATIONAL=

# Device/dtype hints (auto-detected when possible)
DEVICE_MAP=auto
TORCH_DTYPE=float16

# Memory database path
MEMORY_DB_PATH=./temp/memory.db

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Moderation settings (optional)
MODERATION_MODEL_NAME=
MODERATION_THRESHOLD=0.7
CRISIS_COOLDOWN_SECONDS=120
MAX_FLAGS_PER_HOUR=3

# Embedding model for recommendations
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
